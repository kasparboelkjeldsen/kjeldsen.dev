{
    "$schema": "appsettings-schema.json",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.ApplicationInsights"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Umbraco": "Information",
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "ApplicationInsights",
                "Args": {
                    "connectionString": "",
                    "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ]
    },
    "ConnectionStrings": {
        "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
    },
    "Umbraco": {
        "CMS": {
            "DeliveryApi": {
                "Enabled": true,
              "PublicAccess": false,
              "OutputCache": {
                "Enabled": true,
                "ContentDuration": "00:30:00"
              }
            },
            "Global": {
                "Id": "3b245cab-cbb5-4a59-b2b1-ed483b079ddf",
                "SanitizeTinyMce": true
            },
            "Content": {
                "AllowEditInvariantFromNonDefault": true,
                "ContentVersionCleanupPolicy": {
                    "EnableCleanup": true
                }
            },
            "Unattended": {
                "UpgradeUnattended": true
            },
            "Security": {
                "AllowConcurrentLogins": false,
                "BackOfficeHost": "https://umbraco.kjeldsen.dev"
            },
            "WebRouting": {
                "UmbracoApplicationUrl": "https://umbraco.kjeldsen.dev"
            }
        },
        "Storage": {
            "AzureBlob": {
                "Media": {
                    "ContainerName": "kjdevblob"
                }
            }
        }
    },
    "DeliveryApiExtensions": {
        "Preview": {
            "Enabled": true,
            "Media": {
                "Enabled": true
            }
        },
        "TypedSwagger": {
            "Enabled": true,
            "Mode": "Auto"
        }
    },
    "Nuxt": {
        "Host": "https://www.kjeldsen.dev"
    },
    "HeadlessBlockPreview": {
        "Host": "https://kjdev-app-frontend.azurewebsites.net",
        "Api": "/__blockpreview",
        "Selector": "#__preview",
        "Template": "<link rel=\"stylesheet\" href=\"/css/cms.css\" /><style>.__block-preview { background: black; pointer-events: none; padding:10px; }</style><div class=\"__block-preview\">{{html}}</div>",
        "Debug": false
    },
    "HeadlessPreview": {
        "Url": "https://kjdev-app-frontend.azurewebsites.net/api/init-preview"
    },
    "uSync": {
        "Settings": {
            "ExportOnSave": "Settings"
        }
    },
    "Azure": {
        "KeyVault": "https://kjdevkv.vault.azure.net/"
    },
    "EngageExtensions": {
        "NoColumnStore": true,
        "ProcessingInterval": 5
    }
}